---
import Layout from '../layouts/Layout.astro';
import { Lock } from 'lucide-react';
---
<Layout title="Restricted Area">
    <div class="h-[60vh] flex flex-col items-center justify-center text-center">
        <div class="p-6 bg-lux-green/5 rounded-full mb-6 border border-lux-green/20">
            <Lock className="w-16 h-16 text-lux-green" />
        </div>
        <h1 class="text-4xl font-bold text-white mb-2">ACCESS DENIED</h1>
        <p class="font-mono text-lux-green">This sector is currently under construction.</p>
        <p class="text-gray-500 mt-2 text-sm">Clearance Level: Insufficient</p>
    </div>
</Layout>