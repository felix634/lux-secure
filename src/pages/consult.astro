---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Consult">
    <div class="max-w-2xl mx-auto mt-10 p-8 lux-glass rounded-sm">
        <h1 class="text-3xl font-bold text-white mb-2">SECURE CHANNEL</h1>
        <p class="text-gray-400 mb-8 text-sm">Establish encrypted communication with our architecture team.</p>

        <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label class="text-xs font-mono text-lux-green uppercase">Identifier</label>
                    <input type="text" class="w-full bg-black/50 border border-gray-700 p-3 rounded-sm text-white focus:border-lux-green focus:outline-none transition-colors" placeholder="Name or Alias" />
                </div>
                <div class="space-y-2">
                    <label class="text-xs font-mono text-lux-green uppercase">Frequency</label>
                    <input type="email" class="w-full bg-black/50 border border-gray-700 p-3 rounded-sm text-white focus:border-lux-green focus:outline-none transition-colors" placeholder="Email Address" />
                </div>
            </div>
            
            <div class="space-y-2">
                 <label class="text-xs font-mono text-lux-green uppercase">Payload</label>
                 <textarea rows="4" class="w-full bg-black/50 border border-gray-700 p-3 rounded-sm text-white focus:border-lux-green focus:outline-none transition-colors" placeholder="Describe your security needs..."></textarea>
            </div>

            <button class="w-full bg-lux-green text-black font-bold py-3 uppercase tracking-widest hover:bg-white transition-colors shadow-[0_0_15px_rgba(0,255,65,0.4)]">
                Transmit Request
            </button>
        </form>
    </div>
</Layout>