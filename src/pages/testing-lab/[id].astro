---
import Layout from '../../layouts/Layout.astro';
import { labExperiments } from '../../data/lab';
import ComplianceDashboard from '../../components/lab/ComplianceDashboard.jsx';
import LogisticsMap from '../../components/lab/LogisticsMap.jsx';
import IndustrialTwin from '../../components/lab/IndustrialTwin.jsx';
import { ArrowLeft } from 'lucide-react';

// Generate paths
export async function getStaticPaths() {
  return labExperiments.map((exp) => ({
    params: { id: exp.id },
    props: { exp },
  }));
}

const { exp } = Astro.props;
---

<Layout title={exp.title}>
    <div class="max-w-7xl mx-auto py-8 h-screen flex flex-col">
        
        {/* Header */}
        <div class="flex items-center justify-between mb-8">
            <a href="/testing-lab" class="flex items-center gap-2 text-gray-500 hover:text-white transition-colors group">
                <ArrowLeft size={16} class="group-hover:-translate-x-1 transition-transform" />
                <span class="font-mono uppercase text-xs">Exit Simulation</span>
            </a>
            
            <div class="text-right">
                <h1 class="text-2xl font-bold text-white">{exp.title}</h1>
                <div class={`text-xs font-mono uppercase ${exp.color}`}>
                    Simulation Active // {exp.id}
                </div>
            </div>
        </div>

        {/* The Component Wrapper */}
        <div class="flex-grow bg-[#050505] border border-gray-800 rounded-lg p-1 overflow-hidden shadow-2xl relative">
             <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-lux-green to-transparent opacity-50"></div>
             
             <div class="h-full p-4 md:p-8">
                {exp.component === 'Compliance' && <ComplianceDashboard client:load />}
                {exp.component === 'Logistics' && <LogisticsMap client:load />}
                {exp.component === 'Industrial' && <IndustrialTwin client:load />}
             </div>
        </div>

    </div>
</Layout>