---
import Layout from '../layouts/Layout.astro';
import ScrambleText from '../components/ui/ScrambleText.jsx';
import { AlertTriangle, Home, Terminal } from 'lucide-react';
---

<Layout title="404 - Connection Lost">
    <div class="min-h-[80vh] flex flex-col items-center justify-center text-center px-4">
        
        {/* Error Code */}
        <div class="relative mb-8">
            <h1 class="text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-b from-lux-green to-transparent opacity-50 select-none">
                404
            </h1>
            <div class="absolute inset-0 flex items-center justify-center">
                <h1 class="text-9xl font-bold text-white mix-blend-overlay animate-pulse">
                    404
                </h1>
            </div>
        </div>

        {/* Terminal Output */}
        <div class="bg-[#050505] border border-red-500/30 p-6 rounded-sm max-w-lg w-full mb-8 font-mono text-left shadow-[0_0_30px_rgba(239,68,68,0.1)]">
            <div class="flex items-center gap-2 mb-4 border-b border-red-500/20 pb-2">
                <AlertTriangle className="text-red-500 w-4 h-4" />
                <span class="text-red-500 text-xs font-bold uppercase tracking-widest">System Error</span>
            </div>
            
            <div class="space-y-2 text-xs">
                <div class="text-gray-500">
                    <span class="text-red-500">{'>'}</span> ERR_CONNECTION_REFUSED
                </div>
                <div class="text-gray-500">
                    <span class="text-red-500">{'>'}</span> TARGET_URI_NOT_FOUND
                </div>
                <div class="text-gray-500">
                    <span class="text-red-500">{'>'}</span> TRACING ROUTE... <span class="text-red-500 animate-pulse">FAILED</span>
                </div>
                <div class="mt-4 text-lux-green">
                    <span class="text-white">{'>'}</span> <ScrambleText client:visible text="The requested node does not exist in this sector." />
                </div>
            </div>
        </div>

        {/* Action Button */}
        <a href="/" class="group flex items-center gap-2 px-6 py-3 bg-lux-green text-black font-bold uppercase tracking-widest text-sm hover:bg-white transition-all shadow-[0_0_20px_rgba(0,255,65,0.4)]">
            <Home className="w-4 h-4" />
            Return to Base
        </a>

    </div>
</Layout>